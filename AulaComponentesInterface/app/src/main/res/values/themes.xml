<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.AulaComponentesInterface" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryVariant">@color/primaria_variacao</item>
        <item name="colorOnPrimary">@color/item_primaria</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/secundaria</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/item_secundaria</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customizações do tema. -->
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Theme.AulaComponentesInterface" parent="Base.Theme.AulaComponentesInterface" />
</resources>